
{% block body %}
<div class="card shadow-sm">
    <div class="card-header card-header-sm">
        <h3 class="card-title"> Liste des dons</h3>
        <div class="card-toolbar">
            <a href="{{ path('app_config_don_index') }}" class="btn btn-main btn-sm">
                <i class="bi bi-reply-all text-light"></i>
                retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <div id="grid_app_gestion_fieldon" class="grid-dt-wrapper">Chargement....</div>
            </div>
        </div>
    </div>
</div>
